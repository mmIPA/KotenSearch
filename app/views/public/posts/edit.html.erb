<h2>投稿の編集</h2>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> が発生しました:</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description, '説明' %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :start_date, '開始日' %>
    <%= f.date_select :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date, '終了日' %>
    <%= f.date_select :end_date %>
  </div>

  <div class="field">
    <%= f.label :start_time, '開始時間' %>
    <%= f.time_select :start_time %>
  </div>

  <div class="field">
    <%= f.label :end_time, '終了時間' %>
    <%= f.time_select :end_time %>
  </div>

  <div class="field">
    <%= f.label :place, '場所' %>
    <%= f.text_field :place %>
  </div>

  <div class="field">
    <%= f.label :image, '画像' %>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="mt-3">
  <%= link_to '戻る', post_path(@post), class: 'btn btn-outline-secondary' %>
</div>