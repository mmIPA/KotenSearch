<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6"> 

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
        <div class="form-group">
          <%= f.label :email, "Email address", class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス", required: true %>
        </div>
      
        <div class="form-group">
          <%= f.label :password, "Password", class: "sr-only" %>
          <%= f.password_field :password, class: "form-control", placeholder: "パスワード", required: true %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="checkbox mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン情報を記憶する %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      
      <div class="row mt-4">
        <div class="col">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>