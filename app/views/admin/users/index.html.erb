  <div class="container-fluid mt-4">
    <div class="row">
      <h1>ユーザー覧</h1>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>名前</th>
            <th>メールアドレス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td class="text-center"><%= link_to '詳細', admin_user_path(user), class: 'btn btn-primary btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

