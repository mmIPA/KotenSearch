<div class="list-group">
  <h5 class="list-group-item active", style="background-color: #3190d8; color: #fff;" >カテゴリ一覧</h5>
  <% @categories.each do |category| %>
    <a href="<%= category_path(category) %>" class="list-group-item list-group-item-action">
      <%= category.name %>
    </a>
  <% end %>
</div>