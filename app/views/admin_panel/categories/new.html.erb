<div class="container-fluid mt-4">
  
  <h1>カテゴリを作成する</h1>

  <%= form_with model: @category, url: admin_panel_categories_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, "カテゴリ名" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <%= f.submit "作成する", class: "btn btn-primary" %>
  <% end %>

  <%= link_to '戻る', admin_panel_categories_path %>

</div>