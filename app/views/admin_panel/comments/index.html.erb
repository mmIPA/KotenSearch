<div class="container-fluid mt-4">
  <div class="row">
    <h1>コメント一覧</h1>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>コメント内容</th>
          <th>投稿タイトル</th>
          <th>作成日時</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.user.name %></td>
            <td><%= comment.content %></td>
            <td><%= link_to comment.post.title, admin_panel_post_path(comment.post) %></td>
            <td><%= comment.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td class="text-center">
              <%= link_to '削除', admin_panel_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>